pipeline {
    agent any
    
    environment {
        DOCKER_IMAGE = 'ml-service'
        DOCKER_TAG = "${BUILD_NUMBER}"
        SERVER_IP = '89.252.179.156'
    }
    
    stages {
        stage('Build Docker Image') {
            steps {
                dir('ml_service') {
                    sh "docker build -t ${DOCKER_IMAGE}:${DOCKER_TAG} ."
                }
            }
        }
        
        stage('Deploy') {
            steps {
                sh '''
                    # Eski container'ı durdur ve sil
                    ssh -o StrictHostKeyChecking=no root@${SERVER_IP} "docker stop ml-service || true && docker rm ml-service || true"
                    
                    # Yeni image'ı sunucuya gönder
                    docker save ${DOCKER_IMAGE}:${DOCKER_TAG} | ssh -o StrictHostKeyChecking=no root@${SERVER_IP} "docker load"
                    
                    # Yeni container'ı başlat
                    ssh -o StrictHostKeyChecking=no root@${SERVER_IP} "cd /opt/ml-service && docker run -d \
                        --name ml-service \
                        -p 5000:5000 \
                        --restart always \
                        -v /opt/ml-service/logs:/app/logs \
                        -v /opt/ml-service/data:/app/data \
                        -v /opt/ml-service/models:/app/models \
                        ${DOCKER_IMAGE}:${DOCKER_TAG}"
                '''
            }
        }
    }
    
    post {
        always {
            // Eski image'ları temizle
            sh "docker image prune -f"
            sh "ssh -o StrictHostKeyChecking=no root@${SERVER_IP} 'docker image prune -f'"
        }
    }
} 